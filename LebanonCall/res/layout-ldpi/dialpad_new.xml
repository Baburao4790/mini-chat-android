<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
 	android:orientation="vertical"
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	android:gravity="center" 
	android:background="@drawable/dbg"
	android:focusable="true">
	
	<RelativeLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center" 
		android:focusable="true">
		
	    <TextView 
	        android:id="@+id/balance_dialpad"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background ="#00000000"
			android:textColor="@color/white"
			android:textSize="15sp"/>

	    <EditText 
			android:id="@+id/phonenumber_for_dialing" 
			android:layout_width="match_parent"
			android:layout_height= "wrap_content" 
			android:layout_below="@+id/balance_dialpad"
			android:layout_marginTop="4dip"
			android:gravity="center"
			android:typeface ="serif"
			android:maxLength = "32"
			android:singleLine ="false"
			android:inputType="phone"
			android:background ="#00000000"
			android:textColor="@color/white"
			android:cursorVisible ="false"
			android:textSize="30dip" />
			
	</RelativeLayout>
	
 	<LinearLayout 
 		android:orientation="vertical"
   		android:layout_width="match_parent"
		android:layout_weight="3"
		android:layout_margin="5dip"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		android:layout_height="wrap_content">
 	
		<LinearLayout 
	   		android:layout_width="match_parent"
			android:layout_weight="3"
			android:layout_alignParentLeft="true"
			android:layout_alignParentBottom="true"
			android:layout_height="wrap_content">
			
			<ImageButton 
				android:id="@+id/b1" 
				android:layout_width="0dip"
				android:layout_height="50dip"
				android:layout_weight="1"
				android:layout_alignParentLeft="true"
				android:layout_alignParentBottom="true"
				android:background="@drawable/button_1_switcher" />
				
			<ImageButton 
				android:id="@+id/b2" 
				android:layout_width="0dip"
				android:layout_height="50dip"
				android:layout_weight="1"
				android:layout_alignParentLeft="true"
				android:layout_alignParentBottom="true"
				android:background="@drawable/button_2_switcher" />
				
			<ImageButton 
				android:id="@+id/b3" 
				android:layout_width="0dip"
				android:layout_height="50dip"
				android:layout_weight="1"
				android:background="@drawable/button_3_switcher" />
				
		</LinearLayout>
			
		<LinearLayout 
	 		android:layout_width="match_parent"
			android:layout_weight="3"
			android:layout_height="wrap_content">
			
			<ImageButton 
				android:id="@+id/b4" 
				android:layout_width="0dip"
				android:layout_height="50dip"
				android:layout_weight="1"
				android:background="@drawable/button_4_switcher" />
			
			<ImageButton 
				android:id="@+id/b5" 
				android:layout_width="0dip"
				android:layout_height="50dip"
				android:layout_weight="1"
				android:background="@drawable/button_5_switcher" />
				
			<ImageButton 
				android:id="@+id/b6" 
				android:layout_width="0dip"
				android:layout_height="50dip"
				android:layout_weight="1"
				android:background="@drawable/button_6_switcher" />
				
		</LinearLayout>		
	
	 	<LinearLayout 
	 		android:layout_width="match_parent"
			android:layout_weight= "3"
			android:layout_alignParentLeft="true"
			android:layout_alignParentBottom="true"
		    android:layout_height="wrap_content">
			    	
			<ImageButton 
				android:id="@+id/b7" 
				android:layout_width="0dip"
				android:layout_height="50dip"
				android:layout_weight="1"
				android:background="@drawable/button_7_switcher" />
				
			<ImageButton 
				android:id="@+id/b8" 
				android:layout_width="0dip"
				android:layout_height="50dip"
				android:layout_weight="1"
				android:background="@drawable/button_8_switcher" />
				
			<ImageButton 
				android:id="@+id/b9" 
				android:layout_width="0dip"
				android:layout_height="50dip"
				android:layout_weight="1"
				android:background = "@drawable/button_9_switcher" />
				
		</LinearLayout>	

		<LinearLayout 
			android:layout_width="match_parent"
			android:layout_weight="3"
		    android:layout_height="wrap_content">
				
			<ImageButton 
				android:id="@+id/bstar" 
				android:layout_width="0dip"
				android:layout_height="50dip"
				android:layout_weight="1"
				android:background="@drawable/button_star_switcher" />
				
			<ImageButton 
				android:id="@+id/b0" 
				android:layout_width="0dip"
				android:layout_height="50dip"
				android:layout_weight="1"
				android:background="@drawable/button_0_switcher" />
	
			<ImageButton 
				android:id="@+id/bhash" 
				android:layout_width="0dip"
				android:layout_height="50dip"
				android:layout_weight="1"
				android:background="@drawable/button_hash_switcher" />
				
		</LinearLayout>	
	
		<LinearLayout 
			android:layout_marginTop="4dip"
			android:layout_marginBottom="2dip"
		    android:layout_width="match_parent"
		    android:layout_weight ="3"
		    android:layout_height="wrap_content">

			<ImageButton
			    android:id="@+id/contacts_image_button"
			    android:layout_width="0dip"
			    android:layout_height="50dip"
			    android:layout_marginLeft="30dip"
			    android:layout_weight="1"
			    android:background="@drawable/contacts_button_switcher" />
				
			<ImageButton 
				android:id="@+id/b_make_call" 
				android:layout_width="35dip"
				android:layout_height="50dip"
				android:layout_weight="1"
				android:background="@drawable/button_call_switcher" />
				
			<ImageButton 
				android:id="@+id/b_back_space" 
				android:layout_width="0dip"
				android:layout_height="50dip"
				android:layout_weight="1"
				android:layout_marginRight="30dip"
				android:background="@drawable/button_back_space_switcher" />
				
		</LinearLayout>	
		
	</LinearLayout>
	
</RelativeLayout>

