<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bgcolor1"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <Button
        android:id="@+id/contact_sync_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:text="sync" />

    <EditText
        android:id="@+id/search_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/contact_sync_button"
        android:hint="@string/hint_search_phone_contact"
        android:inputType="text"
        android:maxLines="1" />

    <Button
        android:id="@+id/clear_search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/contact_sync_button"
        android:layout_toLeftOf="@+id/contact_sync_button"
        android:background="@drawable/cross_btn" />

    <ListView
        android:id="@+id/contact_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/search_box"
        android:background="@color/bgcolor"
        android:cacheColorHint="#00000000"
        android:divider="@color/divider"
        android:dividerHeight="1dp"
        android:fastScrollEnabled="true" />

</RelativeLayout>