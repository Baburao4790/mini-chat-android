<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dbg">
    
	<TextView  
	    android:id="@+id/image_text"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"
	    android:gravity="center"
	    android:textStyle="bold"
	    android:textSize="17sp"
	    android:text="Select Image To Share"/>
	
	<ImageView
		android:id="@+id/iv_photo"
		android:layout_marginTop="10dp"
		android:layout_centerInParent="true"
		android:layout_width="200dp" 		 
		android:layout_height="266dp"
		android:layout_below="@id/image_text"
		android:background="@drawable/image_border"/>
	
	<Button
        android:id="@+id/btn_select_image"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/iv_photo"
        android:layout_alignParentRight="true"
        android:text="@string/btn_select_image" 
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/grey"
        android:background="@drawable/all_button_selector"/>
	
	<Button
        android:id="@+id/btnSend"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_select_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="@string/btn_send" 
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textColor="@color/grey"
        android:background="@drawable/all_button_selector"/>
    
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_select_image"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:text="@string/btn_cancel" 
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:visibility="invisible"
        android:background="@drawable/all_button_selector"/>
		
</RelativeLayout>
